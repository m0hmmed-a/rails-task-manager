<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "Task is complete" : "Task is incomplete" %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "Edit task", edit_task_path(@task) %>

<%= link_to "Back to index", tasks_path %>
